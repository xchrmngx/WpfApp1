        <TextBlock x:Name="ContentBook" HorizontalAlignment="Left" Margin="595,241,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Image x:Name="imgBook" HorizontalAlignment="Left" Height="100" Margin="572,77,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="628,328,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
    </Grid>
</Window>
